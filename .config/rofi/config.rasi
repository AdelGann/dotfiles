configuration {
  kb-row-up: "Control+k";
  kb-row-down: "Control+j";
  kb-row-left: "Control+h";
  kb-row-right: "Control+l";
  kb-mode-complete: "";
  kb-accept-entry: "Control+m,Return,KP_Enter";
  kb-remove-to-eol: "";
  kb-remove-char-back: "BackSpace,Shift+BackSpace";

  modi: "drun,window,run";

  font: "Dosis 14";
  drun-display-format: " {name} ";
  sidebar-mode: true;
  matching: "fuzzy";
  scroll-method: 0;
  disable-history: false;
  show-icons: true;

  display-drun: "  Menu";
  display-run: "  Run";
  display-window: "   Window";

  window-thumbnail: true;
  sort: true;
  sorting-method: "normal";

  timeout {
    action: "kb-cancel";
    delay: 30;
  }

  filebrowser {
    directories-first: true;
    sorting-method: "name";
  }
}

@theme"/dev/null"

* {
  bg: #191724;
  fg: #26233a;
  button: #ebbcba;
  background-color: @bg;
  text-color: @fg;
}

element-text,
element-icon,
mode-switcher {
  background-color: inherit;
  text-color: inherit;
}

window {
  transparency: "real";
  width: 55%;
  border: 10px;
  border-radius: 15px;
  border-color: @bg;
  height: 65%;
}


entry {
  placeholder: "Search";
  placeholder-color: #f6c177;
  text-color: #f6c177;
  expand: false;
  height: 48px;
  padding: 2.0%;
  border-radius: 50%;
  background-color: #26233a;
}
