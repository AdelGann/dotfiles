logo{
    background-image: url("logo-km-rose-pine.png");
    background-size: 200px 200px;
    width: 100px;
  }

listview {
  border: 0px 0px 0px;
  padding: 6px 0px 0px;
  margin: 10px 0px 0px 20px;
  height: 90%;
}

inputbarbotton {
  children: [logo,listview,entry];
  expand: false;
  border-radius: 10px 10px 0 0px;
  font: "Dosis 14";
  margin: 0 0 20px 0;
  width: 30%;
  padding: 20px 20px 20px 20px;

}
wallpaper{
    background-image: url("surreal_art_by_thenumberoneai_dgfi3bl-fullview.jpg");
  }

mainbox {
  orientation: horizontal;
  children: [wallpaper, inputbarbotton];
}

element {
  padding: 10px;
  font: "Dosis 14";
  margin: 5px 5px 5px 5px;
  border-radius: 10px;
  background-color: #524f67;
}

element-text {
  expand: true;
  vertical-align: 0.5;
  margin: 0% 1% 0% 1%;
  font: "Dosis 14";
  background-color: inherit;
  text-color: #26233a;
}

element selected {
  background-color: @button;
  font: "Dosis 14";
  text-color: @fg;
  border-radius: 10px;
}

mode-switcher {
    horizontal-align: 0.5;
		padding: 0px 50px 0px 50px ;
		border: 1px;
}

button {
	expand: true;
	padding: 8px;
	text-color: @fg;
  border-radius: 10px;
  background-color: #524f67;
}
button selected  {
	background-color: @button;
  border-radius: 10px;
	border-color: #FFFFFF;
	text-color: #2e3440;
}

